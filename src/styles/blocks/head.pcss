.head {
  text-align: center;
}

.head__name {
  font-size: 48px;
  color: #43a9ff;
}

.head__desc {
  font-size: 18px;
  font-weight: bold;
  color: #4b5863;
  opacity: 0.15;
}

.head__round {
  width: 70vh;
  height: 70vh;
  border-radius: 50%;
  box-shadow: 0px 0px 150px 30px rgb(240, 240, 240);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  transform: translateY(-50%);
}